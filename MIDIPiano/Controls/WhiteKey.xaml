<UserControl
    x:Class="MIDIPiano.Controls.WhiteKey"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MIDIPiano.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="40"
    Width="40" Height="200"
    VerticalAlignment="Top">

    <Grid x:Name="WKey"
          Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4"
          PointerPressed="WKey_PointerPressed" PointerReleased="WKey_PointerReleased"
          PointerCanceled="WKey_PointerReleased" PointerCaptureLost="WKey_PointerReleased"
          PointerEntered="WKey_PointerEntered" PointerExited="WKey_PointerReleased"/>
</UserControl>
